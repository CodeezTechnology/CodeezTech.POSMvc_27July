@model CodeezTech.POS.Web.DAL.EntityDataModel.POS_CASHIER_COUNTER

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-6" style="display:inherit;">
                <a href="/CashierCounter/Index"><i class="fa fa-arrow-circle-o-left"></i></a><h3 class="text-primary"> &nbsp; Cashier Counters</h3>
            </div>
            <div class="col-md-6 align-self-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/IndexUser">Home</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </div>
        </div>
        <!-- Start Page Content -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("Delete", "CashierCounter", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <h3 style="display: inline-block; color: red;">Are you sure you want to delete this?</h3>
                                        @*<a href="/User/Delete/@Model.USER_ID" class="btn btn-danger pull-right"><i class="fa fa-trash"></i> Delete</a>*@
                                        <button type="submit" class="btn btn-danger pull-right"><i class="fa fa-trash"></i> Delete</button>
                                    </div>
                                </div>
                                <hr />
                                <table class=" table-condensed">
                                    <tr>
                                        <td>
                                            <label class="col-md-2 col-form-label">Counter Description:</label>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.COUNTER_DESC)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-2 col-form-label">Branch:</label>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.BRANCH_ID)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-2 col-form-label">Active:</label>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ISACTIVE_FLAG)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="col-md-2 col-form-label">Posted:</label>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.ISPOSTED_FLAG)
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
