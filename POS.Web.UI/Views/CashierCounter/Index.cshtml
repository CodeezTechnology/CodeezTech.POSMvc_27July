@model IEnumerable<CodeezTech.POS.Web.DAL.EntityDataModel.POS_CASHIER_COUNTER>

@{
    ViewBag.Title = "Cashier Counters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-6" style="display:inherit;">
                <a href="~/Home/IndexUser"><i class="fa fa-arrow-circle-o-left"></i></a><h3 class="text-primary"> &nbsp; Cashier Counters</h3>
            </div>
            <div class="col-md-6 align-self-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/IndexUser">Home</a></li>
                    <li class="breadcrumb-item">Users Management</li>
                    <li class="breadcrumb-item active">Counter</li>
                </ol>
            </div>
        </div>
        <p class="card-title">
            @*    @Html.ActionLink("Create New", "Create")*@

        </p>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 style="display:inline-block;font-weight:bold;">List</h4>
                                <a href="/CashierCounter/Create" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Create New</a>
                            </div>
                        </div>
                        <div class="table-responsive ">
                            <table id="myTable" class="table table-hover table-condensed" style="font-family:Consolas;">
                                <thead>
                                    <tr>
                                        <th>
                                            <label class="col-md-2 col-form-label">Counter Description</label>
                                        </th>

                                        <th>
                                            <label class="col-md-2 col-form-label">Branch</label>

                                        </th>
                                        <th>
                                            <label class="col-md-2 col-form-label">Active</label>

                                        </th>
                                        <th>
                                            <label class="col-md-2 col-form-label">Posted</label>

                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.COUNTER_DESC)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.BRANCH_ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ISACTIVE_FLAG)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ISPOSTED_FLAG)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.COUNTER_ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.COUNTER_ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.COUNTER_ID })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>