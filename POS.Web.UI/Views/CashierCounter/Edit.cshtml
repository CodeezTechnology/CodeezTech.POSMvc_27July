@model CodeezTech.POS.Web.DAL.EntityDataModel.POS_CASHIER_COUNTER

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-6" style="display:inherit;">
                <a href="/User/Index"><i class="fa fa-arrow-circle-o-left"></i></a><h3 class="text-primary"> &nbsp; Cashier Counter</h3>
            </div>
            <div class="col-md-6 align-self-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Home/IndexUser">Home</a></li>
                    <li class="breadcrumb-item active">Cashier Counter</li>
                </ol>
            </div>
        </div>
        <!-- Start Page Content -->
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4 style="display: inline-block; font-weight: bold;">Edit</h4>
                                            <button type="submit" class="btn btn-success pull-right"><i class="fa fa-check"></i> Update</button>
                                        </div>

                                    </div>
                                    <hr />
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.COUNTER_ID)

                                    <div class="form-group">
                                        <label class="col-md-2 col-form-label">Counter Description:</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.COUNTER_DESC)
                                            @Html.ValidationMessageFor(model => model.COUNTER_DESC)
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="col-md-2 col-form-label">Branch:</label>
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.BRANCH_ID, (IEnumerable<SelectListItem>)TempData["CompanyBranchList"], "Please Select", new { @class = "form-control", @required = "True" })
                                            @Html.ValidationMessageFor(model => model.BRANCH_ID)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-form-label">Active:</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.ISACTIVE_FLAG)
                                            @Html.ValidationMessageFor(model => model.ISACTIVE_FLAG)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-form-label">Posted:</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.ISPOSTED_FLAG)
                                            @Html.ValidationMessageFor(model => model.ISPOSTED_FLAG)
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

