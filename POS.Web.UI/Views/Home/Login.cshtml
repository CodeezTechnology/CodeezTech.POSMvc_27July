@model CodeezTech.POS.Web.DAL.EntityDataModel.POS_USER

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <title>POS Login</title>
    @Styles.Render("~/Content/css");

</head>

<body class="fix-header fix-sidebar">
    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- Main wrapper  -->
    <div id="main-wrapper">

        <div class="unix-login">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <div class="login-content card">
                            <div class="login-form">
                                <h4>Login</h4>
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                                {
                                        @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.Label("Username")
                                        @Html.TextBoxFor(model => model.USERNAME, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Password")
                                        @Html.PasswordFor(model => model.PASSWORD, new { @class = "form-control" })
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(model => model.ISACTIVE_FLAG, new { @class = "css-control-primary css-checkbox" }) Remember Me
                                        </label>
                                        <label class="pull-right">
                                            <a href="#">Forgotten Password?</a>
                                        </label>
                                    </div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Sign in</button>
                                    @*<div class="register-link m-t-15 text-center">
                                            <p>Don't have account ? <a href="#"> Sign Up Here</a></p>
                                        </div>*@
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- End Wrapper -->
    <!-- All Jquery -->
    <script src="~/Scripts/js/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Scripts/js/lib/bootstrap/~/Scripts/js/popper.min.js"></script>
    <script src="~/Scripts/js/lib/bootstrap/~/Scripts/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Scripts/js/jquery.slimscroll.js"></script>
    <!--Menu sidebar -->
    <script src="~/Scripts/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/Scripts/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Scripts/js/scripts.js"></script>

</body>
</html>
